<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Postgres Bread</title>
  </head>
  <body>
    <div class="container" style="padding-top: 20px">
    <h1>BREAD (Browse, Read, Edit, Add, Delete)</h1>
    <h2>Filters</h2>
    <form action="/" method="GET">       
      <input type="hidden" name="page" value="1" /> 
      <!---------Menampilkan box id------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" 
                type="checkbox" 
                name="ck1"
                 />
                <label class="form-check-label">ID</label>
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="form-group">
            <input type="text" class="form-control" id="id" name="nmid"
            placeholder="ID"/>
        </div>
    </div>
    <!---------Menampilkan box String------->
    <div class="container">
      <div class="row">
          <div class="col-sm-2">
              <div class="form-check">
                  <input class="form-check-input" 
                  type="checkbox" 
                  name="ck2"
                  />String
                  
              </div>
          </div>
      </div>
      <div class="col-sm-10">
          <div class="form-group">
              <input 
              type="text" 
              class="form-control" 
              id="String" 
              name="nmstring"
              placeholder="String"
               />
              </div>
        </div>
    </div>
    <!---------Menampilkan box Integer------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" 
                type="checkbox" 
                name="ck3"/>Integer
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="form-group">
            <input type="text" class="form-control" id="Integer" name="nminteger"
            placeholder="Integer" />
        </div>
    </div>
    <!---------Menampilkan box Float------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="ck4"/>Float
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="form-group">
            <input type="text" class="form-control" id="Float" name="nmfloat"
            placeholder="Float" />
        </div>
    </div>
    <!---------Menampilkan box Date------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="ck5"/>Date
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="form-group">
            <input type="date" class="form-control" id="Date" name="nmdateStart"
            placeholder="START DATE" />
            TO
            <input type="date" class="form-control" id="Date" name="nmdateEnd"
            placeholder="END DATE" />
        </div>
    </div>

    <!---------Menampilkan box Bolean------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="ck6"/>Boolean
            </div>
        </div>
    </div>
    <div class="form-group row">    
            <!-- <label for="colFormLabelSm" class="col-sm-1 col-form-label">Boolean</label> -->
            <div class="col-sm-10">                    
                <select class="form-control" id_type="exampleFormControlSelect1" name="nmboolean">
                <option value="">--pilih type--</option>
                <option value="true">true</option>
                <option value="false">false</option>
                </select>
            </div>    
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
        <table class="table table-striped table-dark" border="1">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Umur</th>
                <th scope="col">Integer</th>
                <th scope="col">Float</th>
                <th scope="col">Date</th>
                <th scope="col">Boolean</th>
                <th scope="col">Actions</th>
            </tr>
            
            <% data.forEach((data)=>{ %>
              <tr>
                  <td><%= data.id %></td>
                  <td><%= data.dataString %></td>
                  <td><%= data.dataInteger %></td>
                  <td><%= data.dataFloat %></td>
                  <td><%= moment(data.dataDate).format("YYYY/MM/DD") %></td>
                  <td><%= data.dataBoolean %></td>
                  <td><a class="btn btn-success" href="edit/<%= data.id %>">Edit</a>
                      <a class="btn btn-danger" href="deleted/<%= data.id %>">Delete</a>
                  </td>
              </tr>
            <% }) %>
            
        </table>
        <a class="btn btn-primary" href="/add">ADD</a>
        
        <nav aria-label="Page navigation example" style="margin-top:1%">
            <ul class="pagination" class="pagination justify-content-center">
                <li class="page-item <%= current == 1 ? 'disabled' : ''%>"><a class="page-link"
                        href="<%= query.replace(`page=${parseInt(current)}`, `page=${parseInt(current) - 1}`) %>">Previous</a>
                </li>
                <% for(let i = 1; i <= pages; i++){ %>
                <li class="page-item <%= current == i ? 'active' : '' %>"><a class="page-link"
                        href="<%= query.replace(`page=${current}`, `page=${i}`) %>"><%= i %></a></li>
                <% } %>
                <li class="page-item <%= current == pages ? 'disabled' : ''%>"><a class="page-link"
                        href="<%= query.replace(`page=${parseInt(current)}`, `page=${parseInt(current) + 1}`) %>">Next</a>
                </li>
            </ul>
        </nav>
    </div>
    
</div>

</form>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>